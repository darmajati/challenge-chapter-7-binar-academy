<%- include('../partials/dashboard/form-head') %>
        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">
            <div class="back">
                <a href="/admin/userbiodata"><h3> &lt; Back</h3></a>
            </div>
            <div class="d-flex text-center mb-3">
              
               <h1>Create Biodata User</h1>
            </div>
            <form action ="/admin/userbiodata/create" method="post">

              <!-- Fullname input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="full_name">Full Name</label>
                <input type="text" name="full_name" id="full_name" class="form-control" required/>
               </div>

             <!-- Date Birth -->
             <div class="form-outline mb-4">
               <label class="form-label" for="birth_date">Date Birth</label>
               <input type="date" name="birth_date" id="birth_date" class="form-control" required/>
             </div>

               <!-- Gender -->
               <div class="form-outline mb-4">
                <label class="form-label" for="Gender">Gender</label><br>
                <input type="radio" name="gender" value="male" required> Male <input type="radio" name="gender" value="female" required> Female
               </div>


              <!-- id user game input -->
             <div class="form-outline mb-4">
                <label class="form-label" for="user_game_id">ID User Game</label>
                <input type="integer" name="user_game_id" id="user_game_id" class="form-control" required/>
              </div>
              
              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Create
              </button>

<%- include('../partials/dashboard/form-bottom') %>
