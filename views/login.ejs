<%- include('partials/head') %>
<%- include('partials/formstyle') %>

        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">
            <div class="back">
              <a href="/"><h3> &lt; Back</h3></a>
            </div>
            <div id="result" class="d-flex text-center mb-3">
              <h1>Login</h1>
            </div>
            <div style="color: red">
              <h5><%= status %></h5>
            </div>
            <form action ="/auth/login" method="post">
              <!-- Username input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control" required/>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" required/>
              </div>

              <!-- Checkbox -->

              <!-- Submit button -->
              <button class ="login" type="submit" class="btn btn-primary btn-block mb-4">
                Login
              </button>

              <!-- Register buttons -->
              <div class="text-center">

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-google"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-twitter"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-github"></i>
                </button>
                    <div>
                        <p class="mb-0">Don't have an account? <a href="/auth/register" class="fw-bold">Sign Up</a>
                        </p>
                  </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/scripts') %>
 